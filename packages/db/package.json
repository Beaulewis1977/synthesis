  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/pg": "^8.11.6",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.4"
  }
