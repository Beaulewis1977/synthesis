{
  "name": "synthesis-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous RAG system with Claude Agent SDK",
  "repository": {
    "type": "git",
    "url": "https://github.com/beaulewis1977/synthesis.git"
  },
  "author": "beaulewis1977",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:dev": "docker compose up -d synthesis-db synthesis-ollama",
    "docker:up": "docker compose --profile app up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "verify:mcp": "bash scripts/verify-mcp-tools.sh",
    "prepare": "[ -d .git ] && command -v husky >/dev/null && husky install || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.4",
    "tsx": "^4.19.1",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.4"
  },
  "workspaces": ["apps/*", "packages/*"],
  "dependencies": {
    "pg": "^8.12.0"
  }
}
